{
  "name": "@secure-task-manager/api-e2e",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "implicitDependencies": [
      "@secure-task-manager/api"
    ],
    "targets": {
      "e2e": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{projectRoot}/test-output/jest/coverage"
        ],
        "options": {
          "jestConfig": "api-e2e/jest.config.cts",
          "passWithNoTests": true
        },
        "dependsOn": [
          "@secure-task-manager/api:build",
          "@secure-task-manager/api:serve"
        ]
      }
    }
  }
}
